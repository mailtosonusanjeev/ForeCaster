<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hour_cardview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:layout_marginTop="5dp"
               android:src="@drawable/clock"
               android:id="@+id/imageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour_temp_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Temp :"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour_temp"
                android:layout_below="@id/hour_temp_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="0*C"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour_time_text"
                android:text="Time"
                android:layout_alignTop="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hour_time"
                android:text="00:00:00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/hour_time_text"
                android:layout_toRightOf="@+id/hour_time_text"
                android:layout_toEndOf="@+id/hour_time_text"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
